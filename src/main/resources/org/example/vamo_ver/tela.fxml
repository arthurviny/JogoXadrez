<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="rootPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.example.vamo_ver.Menu"
           prefWidth="600" prefHeight="400">

    <ImageView fx:id="backgroundImage" fitWidth="600" fitHeight="400" preserveRatio="true"/>

    <VBox alignment="CENTER" spacing="20">
        <ImageView fx:id="logoImage" fitWidth="200" preserveRatio="true"/>
        <Button fx:id="playButton" text="▶ JOGAR"
                style="-fx-font-size: 16px;
               -fx-font-weight: bold;
               -fx-text-fill: white;
               -fx-background-color: linear-gradient(to right, #673166, #673161);
               -fx-background-radius: 20;
               -fx-padding: 12 30;
               -fx-cursor: hand;"/>
        <Button fx:id="instrucoes" text="Instruções"
                style="-fx-font-size: 16px;
               -fx-font-weight: bold;
               -fx-text-fill: white;
               -fx-background-color: linear-gradient(to right, #673166, #673161);
               -fx-background-radius: 20;
               -fx-padding: 12 30;
               -fx-cursor: hand;"/>
    </VBox>
</StackPane>